<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itforhumanity.attendance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name="com.itforhumanity.attendance.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.itforhumanity.attendance.CameraActivity"
            android:label="@string/title_activity_camera" 
            android:screenOrientation="landscape"
            >
        	<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.records.RecordActivity"
            android:label="@string/title_activity_record" >
        </activity>
        <activity
            android:name="activities.records.RecordsActivity"
            android:label="@string/title_activity_records" >
        </activity>
        <activity
            android:name="activities.employees.EmployeeActivity"
            android:label="@string/title_activity_employee" >
        </activity>
        <activity
            android:name="activities.employees.EmployeesActivity"
            android:label="@string/title_activity_employees" >
        </activity>
    </application>

</manifest>
